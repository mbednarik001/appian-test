    <rule>
        <name>T2_UserRecordLink</name>
        <uuid>_a-0000e3ab-63d7-8000-9ba4-011c48011c48_740576</uuid>
        <description>Component interface that returns a user record link. If the input is null or the logged in user does not have permission to see the passed in user, no value is returned. [Activity History] [Tasking]</description>
        <parentUuid>c285551c-afae-4d9a-9614-c829864de9f5</parentUuid>
        <visibility>
            <advertise>false</advertise>
            <hierarchy>true</hierarchy>
            <indexable>true</indexable>
            <quota>false</quota>
            <searchable>true</searchable>
            <system>false</system>
            <unlogged>false</unlogged>
        </visibility>
        <definition>if(
  and(not(isnull(ri!username)), isusernametaken(ri!username)),
  #"SYSTEM_SYSRULES_userRecordLink"(
    label: ri!label,
    user: ri!username
  ),
  null
)</definition>
        <namedTypedValue>
            <name>username</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <namedTypedValue>
            <name>label</name>
            <type>
                <name>string</name>
                <namespace>http://www.w3.org/2001/XMLSchema</namespace>
            </type>
            <value/>
        </namedTypedValue>
        <preferredEditor>interface</preferredEditor>
        <offlineEnabled>false</offlineEnabled>
    </rule>
